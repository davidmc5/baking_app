<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dadahasa.baking_app">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.dadahasa.baking_app.ui.RecipesActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.StepsActivity"
            android:launchMode="singleTop"
            android:label="Recipe Steps"
            android:parentActivityName=".ui.RecipesActivity">
        </activity>

        <activity android:name=".ui.IngredientsActivity"
            android:launchMode="singleTop"
            android:label="Ingredients"
            android:parentActivityName=".ui.StepsActivity">
        </activity>

        <activity android:name=".ui.StepDetailActivity"
            android:launchMode="singleTop"
            android:label="Step Details"
            android:parentActivityName=".ui.StepsActivity">
        </activity>

    </application>

</manifest>